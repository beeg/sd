<?xml version="1.0"?>
<!DOCTYPE orm SYSTEM "file:/javax/jdo/orm.dtd">
<orm>
    <package name="es.deusto.ingenieria.sd.rmi.user">
        <class name="User">
            <field name="login">
                <column length="32" jdbc-type="VARCHAR"/>
            </field>
			<field name="password">
                <column length="32" jdbc-type="VARCHAR"/>
            </field>
            <field name="messages" mapped-by="user">
            	<collection element-type="es.deusto.ingenieria.sd.rmi.user.Message" dependent-element="true"/>
                <join/>
            </field>
        </class>
        <class name="Message">
        	<field name="text">
        		<column length="32" jdbc-type="VARCHAR"/>
        	</field>
        	<field name="timestamp" persistence-modifier="persistent"> 
                <column jdbc-type="BIGINT"/> 
			</field> 
  			<field name="user" persistence-modifier="persistent"></field>
  		</class>        	
    </package>
</orm>